	</div>

	<div class="col-md-2" id="link-url-div">
			<%= f.text_field :url, placeholder: "URL", class: "form-control" %>
	</div>			
			
	<div id="newLinkDivider" style="display:none" class="col-md-2 col-md-offset-1">
