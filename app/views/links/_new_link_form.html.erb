<%= form_for :link, remote: true, :url => {controller: "links", action: "create", html: {method: :post}} do |f| %>
	<%= f.check_box :link_type, {}, "divider", "normal" %> Divider
	<%= f.text_field :title, placeholder: "Title" %>
	<%= f.text_field :url, placeholder: "URL" %>
	<%= f.submit 'Save', id: "link-submit-button", :class=>"btn btn-primary" %>
<% end %>