<div id="user_info">

		<div class="container-fluid">

			<div class="row">
				<div style="text-align: center">
					<%= image_tag(@user.avatar.url, :size=>"300x300", :class=>"img-circle") %>
				</div>
			</div>
			<div class="row">
				<div  style="text-align: center">
					<h1 class="name"><%= @user.name %></h1>
				</div>
			</div>
			<div class="row">
				<div style="text-align: center">
					<p class="hint"><%= @user.short_bio %></p>
				</div>
			</div>
			<div class="row">
				<div style="text-align: center">
					<p class="username">@<%= @user.username %></p>
				</div>
			</div>
			<div class="row">
				<div style="text-align: center">
					<hr width="10%">
					<p><a class="user-link" href="www.twitter.com">Twitter</a></p>
					<p><a class="user-link" href="www.github.com">Github</a></p>
					<p><a class="user-link" href="www.facebook.com">Facebook</a></p>
					<p><a class="user-link" href="www.facebook.com">Instagram</a></p>
					<p><a class="user-link" href="www.website.com">Website</a></p>
					<hr width="10%">
					<p><a class="user-link" href="www.facebook.com">Blog</a></p>
					<p><a class="user-link" href="www.website.com">Project: ContactCzar</a></p>
				</div>
			</div>
		</div>
</div>