<div id="user_info">

		<div class="container-fluid">

			<div class="row">
				<div style="text-align: center">
					<%= image_tag(user.avatar.url, :size=>"300x300", :class=>"img-circle") %>
				</div>
			</div>
			<div class="row">
				<div  style="text-align: center">
					<h1 class="name"><%= user.name %></h1>
				</div>
			</div>
			<div class="row">
				<div style="text-align: center">
					<p class="hint"><%= user.short_bio %></p>
				</div>
			</div>
			<div class="row">
				<div style="text-align: center">
					<p class="username">@<%= user.username %></p>
				</div>
			</div>
			<div class="row">
				<div id="user-links" style="text-align: center">
					<hr width="10%">
					<% links.each do |link| %>
						<p><%= link_to link.title.capitalize, link.url, class: "user-link" %></p>
					<% end %>

				</div>
			</div>
		</div>
</div>