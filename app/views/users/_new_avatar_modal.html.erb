<%= form_for(@user, :html => {:method => :put, :multipart => true}) do |f|  %>

	<!-- Modal -->
	<div class="modal fade" id="picChangeModal" tabindex="-1" role="dialog" aria-labelledby="picChangeModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h2 class="modal-title" id="picChangeModalLabel">Change pic</h2>
				</div>
				<div class="modal-body">
					<!-- Form for bid -->
					<div class="row">
						<div class="col-md-10 col-md-offset-1">
							<div class="form-horizontal" role="form">
								<%= f.hidden_field :avatar_cache %>
								<div class="form-group">
									<div class="col-md-5 col-md-offset-3">
									  <% if current_user.avatar.url.present? %>
									    <%= image_tag(current_user.avatar.url)  %>
									  <% end %>
									</div>
								</div>

								<div class="form-group">
									<div class="col-md-8 col-md-offset-1">
										<%= f.file_field :avatar %>
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- End form for bid -->
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<%= f.submit "Update", :class => "btn btn-primary" %>
				</div>
			</div>
		</div>
	</div>
<% end %>
